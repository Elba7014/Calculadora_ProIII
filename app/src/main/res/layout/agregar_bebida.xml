<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagen1">

 <de.hdodenhof.circleimageview.CircleImageView
     android:id="@+id/imgProducto"
     android:layout_width="114dp"
     android:layout_height="101dp"
     android:layout_marginLeft="140dp"
     android:layout_marginTop="42dp"
     android:background="@drawable/foto"
     app:civ_border_color="#EAE5E4"
     app:civ_border_width="5dp"
     app:civ_circle_background_color="#ffffff" />

 <EditText
     android:id="@+id/txtcodigo"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="145dp"
     android:hint="Codigo"
     android:textColor="#1B1919" />

 <EditText
     android:id="@+id/txtdescripcion"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="200dp"
     android:hint="Descripcion"
     android:textColor="#1B1A1A" />

 <EditText
     android:id="@+id/txtmarca"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="250dp"
     android:hint="Marca"
     android:textColor="#1C1A1A" />

 <EditText
     android:id="@+id/txtpresentacion"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="305dp"
     android:hint="Presentacion"
     android:textColorHighlight="#171616" />

 <EditText
     android:id="@+id/txtprecio"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="359dp"
     android:hint="Precio"
     android:textColor="#1C1A1A" />

 <Button
     android:id="@+id/btnGuardarProducto"
     android:layout_width="match_parent"
     android:layout_height="54dp"
     android:layout_marginTop="415dp"
     android:background="@color/colorPrimaryDark"
     android:text="Guardar"
     android:textColor="@color/design_default_color_background" />
//
 <Button
     android:id="@+id/btnMostrarProducto"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="480dp"
     android:background="@color/colorPrimaryDark"
     android:text="Mostrar Productos"
     android:textColor="@color/design_default_color_background" />


 <com.google.android.material.floatingactionbutton.FloatingActionButton
     android:id="@+id/btnMostrarProductos"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_alignParentBottom="true"
     android:layout_marginRight="20dp"
     android:layout_marginBottom="15dp"
     android:src="@android:drawable/ic_input_add"
     app:backgroundTint="@color/colorPrimaryDark" />

 <TextView
     android:id="@+id/lbltitulo"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="90dp"
     android:layout_marginTop="3dp"
     android:text="Agregar Bebida"
     android:textSize="30dp" />

</RelativeLayout>