<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ugb.calculadora.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@drawable/v"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="445dp"
                    android:layout_height="257dp"
                    android:scaleType="centerInside"
                    tools:srcCompat="@drawable/imagen1" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/blu"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/padd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:orientation="vertical"
                android:padding="12dp">

                <EditText
                    android:id="@+id/TxtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_top"
                    android:ems="10"
                    android:hint="Usuario o Email"
                    android:inputType="textEmailAddress"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/TxtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_top"
                    android:ems="10"
                    android:hint="ContraseÃ±a(6 caracteres)"
                    android:inputType="textPassword"
                    android:padding="15dp" />


                <Button
                    android:id="@+id/botonLogin"
                    android:layout_width="346dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"

                    android:background="@color/colorPrimaryDark"

                    android:text="@string/login"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed" />


                <Button
                    android:id="@+id/botonRegistrar"
                    android:layout_width="346dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="@string/registrar"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="208dp"
                    android:background="@drawable/f19"
                    android:orientation="vertical"
                    android:paddingLeft="90dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>